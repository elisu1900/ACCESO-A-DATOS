<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bd_neptuno2?useSSL=false&amp;serverTimezone=Europe/Madrid&amp;allowPublicKeyRetrieval=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>

        <property name="hibernate.hbm2ddl.auto">validate</property>

        <mapping class="model.entity.Categorias"/>
        <mapping class="model.entity.Clientes"/>
        <mapping class="model.entity.Detalles"/>
        <mapping class="model.entity.Empleados"/>
        <mapping class="model.entity.Envios"/>
        <mapping class="model.entity.Pedidos"/>
        <mapping class="model.entity.Productos"/>
        <mapping class="model.entity.Proveedor"/>

    </session-factory>
</hibernate-configuration>